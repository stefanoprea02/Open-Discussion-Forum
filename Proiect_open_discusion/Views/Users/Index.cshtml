@{
}

<div style="display: flex; align-items: center; flex-direction: column; margin: 30px 0px">
    <h3 style="margin-bottom: 30px">User List</h3>

    @for(int i = 0; i < ViewBag.Users.Count; i++){
        <p class="comment">
            <a asp-controller="Users"
               asp-action="Show"
               asp-route-id="@ViewBag.Users[i].UserName"
            >@ViewBag.Users[i].UserName</a> : @ViewBag.Roles[i].Name
        </p>
    }
</div>